BootStrap: docker
From: prete/cell2location:latest

%runscript
     echo "Starting cell2location notebook..."
     echo "Open browser to localhost:8888"
     exec /opt/conda/envs/cellpymc/bin/jupyter notebook --notebook-dir=/notebooks --NotebookApp.token='cell2loc' --ip=0.0.0.0 --port=8888 --no-browser --allow-root
